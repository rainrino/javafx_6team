            <TextField fx:id="idTf" layoutX="204.0" layoutY="97.0" prefHeight="40.0" prefWidth="190.0" />
            <Label layoutX="26.0" layoutY="14.0" prefHeight="55.0" prefWidth="261.0" text="회원가입" />
         </children>
